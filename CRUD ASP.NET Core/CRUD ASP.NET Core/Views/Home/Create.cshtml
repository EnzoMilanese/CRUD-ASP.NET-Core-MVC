@model ContatoVM.Create

@{
    ViewBag.Title = "Novo contato";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" class="m-3" method="post">
    <div class="form-group row">
        <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Nome" class="form-control" placeholder="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Numero" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Numero" class="form-control" placeholder="Número">
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FotoPerfil" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"> 
            <div class="custom-file">
                <input asp-for="FotoPerfil" class="form-control custom-file-input">
                <label class="custom-file-label">Escolha um arquivo...</label>
            </div>
            <span asp-validation-for="FotoPerfil" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Adicionar contato</button>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>